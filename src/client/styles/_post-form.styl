@import 'variables.styl'

.post-form
  font-family: $siteFont; 
  padding-top: 20px;

  h2 
    font-weight: normal;
    font-size: 30px;
    margin-bottom: 10px;

  textarea 
    border: 2px solid #ddd;
    border-radius: 2px;
    box-shadow: 2px 2px 0 rgba(#000, 10%);
    font-size: 16px;
    margin-bottom: 10px;
    min-height: 100px;
    padding: 5px 10px;
    resize: none;
    width: 100%;
  
  button 
    background-color: $primaryColor;
    border: none;
    border-radius: 2px;
    color: #eee;
    font-size: 20px;
    margin-bottom: 30px;
    padding: 10px 14px;