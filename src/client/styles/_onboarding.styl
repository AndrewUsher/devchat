@import 'variables.styl'

.onboarding
  background: url('../assets/banner.jpg') no-repeat center center fixed;
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: $siteFont;
  height: 100vh;

  &:after
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(#000, 85%);
    z-index: 1;

  .onboarding-info
    background-color: #eeeeee;
    border-radius: 5px;
    color: $textColor;
    padding: 30px 60px 20px 60px;
    position: relative;
    top: -100px;
    text-align: center;
    z-index: 3;

    @media (max-width: $smallDevice)
      top: -40px;
      padding: 20px 30px;
      width: 90%;

    h2 
      font-size: 30px;
      margin-bottom: 20px;
      text-align: center;


    
    .form-group
      margin-bottom: 20px;

      input
        background-color: #eeeeee;
        border: none;
        border-bottom: 2px solid rgba($textColor, 40%);
        font-size: 18px;
        padding: 10px 5px;

        &:focus 
          border-bottom: 2px solid $primaryColor;
          outline: none;

      input::placeholder
        color: $textColor;
        opacity: 0.4;

    button 
      background-color: darken($primaryColor, 10%);
      border: none;
      border-radius: 5px;
      color: #eeeeee;
      font-size: 18px;
      margin-top: 30px;
      padding: 10px 20px;
      transition: background-color 200ms;

      &:hover 
        background-color: darken($secondaryColor, 20%);
