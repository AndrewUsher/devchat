@import 'variables.styl'

.landing 
  background: url('../assets/banner.jpg') no-repeat center center fixed;
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: $siteFont;
  height: 100vh;

  &:after
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(#000, 85%);
    z-index: 1;

  .landing-text
    color: #fefefe;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
    top: -100px;
    z-index: 10;

    @media (max-width: $smallDevice) 
      top: -60px

    h4
      color: rgba(#fff, 60%);
      font-size: 20px;
      margin-bottom: 20px;
      text-align: center;

    h2 
      color: rgba(#fff, 90%);
      font-size: 60px;
      font-weight: bold;
      letter-spacing: 2px;
      line-height: 4.1rem;
      margin: 0 auto 20px auto;
      text-align: center; 

      @media (max-width: $smallDevice)
        font-size: 32px;
        line-height: 2.5rem;

    h3 
      color: rgba(#fff, 85%);
      font-size: 30px;
      font-weight: normal;
      margin-bottom: 50px;
      text-align: center;

      @media (max-width: $smallDevice)
        font-size: 20px;
    

  .landing-buttons 
    max-width: 1700px;
    padding: 0 30px;
    display: flex;
    justify-content: center;
    align-items: center;

    a 
      background-color: $primaryColor;
      box-shadow: 0 10px 20px rgba(#000, 20%);
      border-radius: 30px;
      color: #fefefe;
      font-size: 24px;
      padding: 15px 35px;
      text-decoration: none;
      transition: all 250ms;

      &:hover 
        background-color: darken($primaryColor, 30%);

      @media (max-width: $smallDevice)
        font-size: 20px;
        padding: 10px 30px;