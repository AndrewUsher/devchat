@import 'variables.styl'

header 
  display: flex;
  font-family: $siteFont;
  align-items: center;
  justify-content: space-between;
  padding: 25px 40px;
  width: 100%;
  position: fixed;
  transition: background-color 300ms;
  z-index: 4;

  @media (max-width: $smallDevice)
    padding: 10px;

  h1 
    color: #f4f4f4;
    font-size: 36px;
    font-weight: normal;
    
    @media (max-width: $smallDevice)
      font-size: 30px;

  nav 
    display: flex;
    align-items: center;
    list-style: none;

    img 
      border-radius: 50%;
      height: 35px;
      margin: auto;
    li 
      margin-right: 25px;

      &:last-child 
        margin-right: 0;

    a 
      color: #fefefe;
      font-size: 20px;
      text-decoration: none;

      @media (max-width: $smallDevice)
        font-size: 16px;

.colored 
  background-color: $primaryColor;
        
