@import 'variables.styl'

.profile-item
  background-color: #fff;
  box-shadow: 2px 2px 0 rgba(#000, 10%);
  display: flex;
  align-items: center;
  margin-bottom: 40px;
  padding: 25px;

  @media (max-width: $smallDevice)
    display: block;
    text-align: center;

  img
    height: 130px;
    border-radius: 50%;
    margin-right: 50px;

    @media (max-width: $smallDevice)
      margin-right: 0;


  .view-profile
    color: $primaryColor;
    font-size: 18px;
    margin-bottom: 15px;

  h4
    font-size: 18px; 
    font-weight: normal;
    margin-bottom: 5px;

  h5 
    font-size: 20px;
    font-weight: normal;
    margin-bottom: 15px;

  ul 
    list-style: none;

  li 
    background-color: $primaryColor;
    color: #eee;
    margin-right: 15px;
    padding: 5px 10px;
    display: inline-block;