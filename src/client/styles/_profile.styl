@import 'variables.styl'


.profile 
  background-color: $primaryColor;
  font-family: $siteFont;
  padding-top: 100px;

  h2 
    font-size: 32px;
    margin-bottom: 10px;

  h3 
    font-size: 26px;
    margin-top: 20px;
    margin-bottom: 7px;

    span 
      color: $primaryColor;
  
  h4 
    font-size: 24px;
    margin-bottom: 10px;


  
  p 
    font-size: 18px;

  .single-profile 
    background-color: #eee;
    padding: 40px;

    .back-button 
      background-color: $primaryColor;
      color: #eee;
      display: inline-block;
      margin-bottom: 40px;
      padding: 10px 15px;
      text-decoration: none;
      transition: background-color 200ms,
                  transform 400ms;

      &:hover 
        background-color: darken($primaryColor, 20%);
        transform: scale(1.1);


.profile-header 
  margin-bottom: 60px;
  text-align: center;

  img 
    border-radius: 50%;
    margin-bottom: 10px;
      

.repo 
  margin-bottom: 20px;

  h4 
    display: inline-block;
    font-size: 24px;
    margin-bottom: 5px;
    

    a 
      color: $primaryColor;
      text-decoration: none;
  
  p 
    font-size: 20px;
    margin-bottom: 10px;

  span 
    font-size: 18px;
    margin-right: 10px;
       
    
.credentials 
  margin-bottom: 40px;

  h3 
    margin-bottom: 30px;

  ul 
    list-style: none;

    li 
      margin-bottom: 20px;

      p   
        font-size: 20px;
        margin-bottom: 15px;

    
        